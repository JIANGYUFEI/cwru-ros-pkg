<launch>

    <node respawn="true" pkg="joy" type="joy_node" name="cwru_joy">
	<param name="dev" type="string" value="/dev/input/js0" />
	<param name="deadzone" value="0.12" />
	<param name="autorepeat_rate" value="20.0" />
    </node>

    <node pkg="cwru_teleop" type="teleop_cwru_joy" name="teleop_cwru_joy" output="screen">
	<param name="angular_axis" value="3" />
	<param name="delay" value="0" />
	<remap from="cmd_vel" to="delayed_cmd_vel" />
	<param name="linear_speed" value="0.5" />
    </node>

    <node pkg="cwru_teleop" type="repeater.py" name="command_repeater">
	<remap from="input" to="delayed_cmd_vel" />
	<remap from="output" to="cmd_vel" />
    </node>
</launch>
